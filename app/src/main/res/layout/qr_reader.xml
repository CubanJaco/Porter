<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <me.dm7.barcodescanner.zxing.ZXingScannerView
                android:id="@+id/_zXingScannerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|bottom">

                <ImageView
                    android:id="@+id/_flash"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_margin="16dp"
                    android:contentDescription="@string/lantern"
                    android:foreground="?selectableItemBackground"
                    tools:ignore="UnusedAttribute" />

            </LinearLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/_recyclerViewClients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_client" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/_relativeDone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/_imageViewCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="70dp"
            android:src="@drawable/ic_check"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/_imageViewFail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="80dp"
            android:src="@drawable/ic_fail"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
